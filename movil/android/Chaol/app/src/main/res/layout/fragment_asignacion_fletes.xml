<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_datos_asignacion_fletes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPanelRegistroFletes"
            android:text="Transportista"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText" />

        <LinearLayout
            android:id="@+id/asignacion_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Fragmento para traer el listado de clientes-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ASIGNACION"
                    android:textAlignment="center"
                    android:textSize="20dp" />s

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/listado_asignaciones_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_asignacion_estatus_transportista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En espera de autorizar transportista"
                    android:textAlignment="center"
                    android:textSize="15dp" />


                <Button
                    android:id="@+id/btn_solicitar_viaje_asignacion"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorSecondaryAccent"
                    android:text="Solicitar Viaje"
                    android:textColor="@color/colorIcons"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_cancelar_viaje_asignacion"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorSecondaryAccent"
                    android:text="Cancelar Viaje"
                    android:textColor="@color/colorIcons"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>